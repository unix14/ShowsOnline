<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/post_comments_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/feed_item_text_margin"
        android:layout_marginTop="@dimen/feed_item_text_margin"
        android:layout_marginEnd="@dimen/feed_item_text_margin"
        android:autoLink="all"
        android:clickable="false"
        android:ellipsize="end"
        android:focusable="false"
        android:fontFamily="sans-serif-condensed-light"
        android:maxLines="1"
        android:padding="3dp"
        android:text="@string/blogpost_comments_section_title"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/admin_controls"
        app:constraint_referenced_ids="post_comments_admin_comments_toggle,post_comments_admin_comments_toggle_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/post_comments_admin_comments_toggle_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/feed_item_text_margin"
        android:layout_marginTop="@dimen/feed_item_text_margin"
        android:layout_marginEnd="@dimen/feed_item_text_margin"
        android:autoLink="all"
        android:clickable="true"
        android:ellipsize="end"
        android:focusable="true"
        android:fontFamily="sans-serif-condensed-light"
        android:maxLines="1"
        android:padding="3dp"
        android:text="הפעלת תגובות"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/post_comments_title"
        app:layout_constraintStart_toStartOf="parent" />

    <ToggleButton
        android:id="@+id/post_comments_admin_comments_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="sans-serif-condensed-light"
        android:maxLines="1"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/post_comments_admin_comments_toggle_title"
        app:layout_constraintBottom_toBottomOf="@+id/post_comments_admin_comments_toggle_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/post_comments_admin_comments_toggle_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/post_comments_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/feed_item_text_margin"
        android:layout_marginEnd="@dimen/feed_item_text_margin"
        android:paddingBottom="@dimen/feed_item_text_margin"
        android:overScrollMode="never"
        android:nestedScrollingEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_comments_admin_comments_toggle"
        tools:itemCount="1"
        tools:listitem="@layout/blog_post_comment_item" />

</androidx.constraintlayout.widget.ConstraintLayout>