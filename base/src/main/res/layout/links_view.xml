<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/post_links_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/feed_item_text_margin"
        android:layout_marginTop="@dimen/feed_item_text_margin"
        android:layout_marginEnd="@dimen/feed_item_text_margin"
        android:autoLink="all"
        android:clickable="false"
        android:ellipsize="end"
        android:focusable="false"
        android:fontFamily="sans-serif-condensed-light"
        android:maxLines="1"
        android:padding="3dp"
        android:text="@string/blogpost_links_section_title"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/post_links_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/feed_item_text_margin"
        android:layout_marginEnd="@dimen/feed_item_text_margin"
        android:overScrollMode="never"
        android:nestedScrollingEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_links_title"
        tools:itemCount="5"
        tools:listitem="@layout/blog_post_link_item" />

    <ImageView
        android:id="@+id/post_links_delete_btn"
        android:src="@drawable/ic_add"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:tint="@color/black"
        android:paddingEnd="20dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingStart="28dp"
        app:layout_constraintTop_toTopOf="@+id/post_links_title"
        app:layout_constraintBottom_toBottomOf="@id/post_links_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="@color/black"
        tools:ignore="UseAppTint" />


</androidx.constraintlayout.widget.ConstraintLayout>