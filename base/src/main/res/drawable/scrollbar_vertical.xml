<?xml version="1.0" encoding="utf-8"?>

<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color for the scrollbar track -->
    <solid android:color="@color/light_blue_400" />

    <!-- Rounded corners -->
    <corners android:radius="1dp" />

    <!-- Size of the scrollbar track -->
    <size android:width="8dp" />

    <!-- Padding for the scrollbar track -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
</shape>