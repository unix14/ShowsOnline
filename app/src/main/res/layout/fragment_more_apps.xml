<?xml version="1.0" encoding="utf-8"?><!--<ScrollView -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".ui.more_apps.MoreAppsFragment">


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:tint="@color/faded"
        android:src="@drawable/ic_thumbnail" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:padding="18dp"
        android:layout_marginTop="42dp"
        android:text="אהבתם את הצגות אונליין?\nלחצו כאן"
        android:textAlignment="center"
        android:textColor="@color/light_blue_400"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:autoLink="web"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/light_blue_600"
        android:gravity="center"
        android:padding="18dp"
        android:text="לחנות האפליקציות"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/trippyCups"
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:layout_marginTop="200dp"
        android:gravity="center"
        tools:src="@drawable/ic_trippy_cups" />

</FrameLayout>
